{{!
    @template local_displace/coursecompetenciesadd

    Show the current competencies used in a course.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * wwwroot
    * competencies

    Example context (json):
    {
        "competencies": [
            {
                id: 1,
                shortname: "Competency 1",
                description: "",
                depth: 0,
                ...
            }
        ],
        "courseid": 25,
        "frameworks": [
            {
                id: 1,
                shortname: "Framework 1",
                ...
            }
        ],
        "wwwroot": "http://.......",
    }
}}
<div class="local_displace coursecompetenciesadd">
    <form method="get" action="" enctype="multipart/form-data">
        <input type="hidden" name="courseid" value="{{courseid}}" />
        <select name="frameworkid" onchange="if(this.value != 0) { this.form.submit(); }">
            {{#frameworks}}
            <option value="{{id}}"{{#selected}} selected="selected"{{/selected}}>
                {{shortname}}
            </option>
            {{/frameworks}}
        </select>
    </form>

    <table border="0" class="generaltable">
        <tr>
            <th>{{#str}} coursecompetencies, tool_lp {{/str}}</th>
            <th>{{#str}} action {{/str}}</th>
        </tr>
        {{#competencies}}
        <tr class="childof-{{parentid}} children-visible" data-id="{{id}}" data-path="{{path}}">
            <td>
                {{#depth}}
                &nbsp;&nbsp;
                {{/depth}}
                {{#haschildren}}
                <a href="#" onclick="var a = this; require(['local_displace/competency'], function(C) { C.toggleNode(a)}); return false;">
                    {{shortname}} {{parentid}}
                </a>
                {{/haschildren}}
                {{^haschildren}}
                    {{shortname}} {{parentid}}
                {{/haschildren}}
            </td>
            <td>-</td>
        </tr>
        {{/competencies}}
    </table>
</div>

{{#js}}
require(['local_displace/competency'], function(C) { C.toggleInit()});
{{/js}}
